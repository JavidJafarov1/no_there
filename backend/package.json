{
  "name": "multiplayer-online-project",
  "version": "1.0.0",
  "description": "Multiplayer online project with WebSocket and blockchain integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "load-test": "artillery run tests/load/socket-test.yml",
    "load-test:report": "artillery run --output report.json tests/load/socket-test.yml && artillery report report.json",
    "load-test:heavy": "artillery run tests/load/socket-test-heavy.yml",
    "load-test:connections": "artillery run tests/load/connection-test.yml",
    "start:cluster": "NODE_ENV=production node src/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "@socket.io/redis-adapter": "^8.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "artillery": "^2.0.0-30",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "verbose": true
  }
}
